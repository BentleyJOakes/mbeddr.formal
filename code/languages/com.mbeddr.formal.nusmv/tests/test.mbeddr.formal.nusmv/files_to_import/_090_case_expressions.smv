-- test for case expressions
-------------------------------------------------------------------------

MODULE case_exps_tests(p1, p2)

VAR
 v1 : boolean;

ASSIGN
  next(v1) :=
   case
	(p2 = 3) : !p1;
	p2 = 2 : case
	           p1 = 1 : 2;
	           p1 = 2 : 3;
	         esac;
	TRUE : p1;
   esac;

  init(v1) := FALSE;